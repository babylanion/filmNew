button{
    outline:none;
}
.filmOffice{
    line-height: 27px;
    vertical-align: middle !important;
    margin-left: 18px;
}
.mainbody {
    color: #000;
    font-size: 16px;
    text-align: center;
    background: #ffffff;
}
.mainbody th {
    height: 58px;
    font-size: 20px;
    border-right:1px solid #f9f9f9;
}
.mainbody thead tr:first-child{
    text-align: left;
}
.mainbody thead tr:last-child{
    border: none;
}
.mainbody thead{
    border-top: 1px solid #b5c8f1;
    border-bottom: 1px solid #f3f3f3;
    font-weight: normal;
}
.mainbody .theadIndex{
    border-top: 1px solid #b1b1b1;
}
.mainbody td {
    font-size: 20px;
    height: 80px;
}
.mainbody thead tr:last-child{
    border: none;
}
.mainbody tbody tr:last-child{
    border-bottom: none;
}
.mainbody tbody tr p{
    text-align: center;
}
.mainbody .filmTitle {
    text-align: left;
    text-indent:20px;
}
.mainbody i {
    display: block;
    font-style: normal;
    font-size: 1.4rem;
    color: #818181;
}
.mainbody thead tr th {
    height: 40px;
    line-height: 40px;
    color: #818181;
    text-align: center;
    font-weight: normal;
}
.mainbody tr td {
    vertical-align: middle !important;
}

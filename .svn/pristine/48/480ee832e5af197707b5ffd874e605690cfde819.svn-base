input, input:focus {
    border: none;
    outline: none;
}
.login_content {
    width: 100%;
    max-width: 640px;
    margin: 0 auto;
    background: url(../image/login_bg.png) no-repeat;
}
.login_header {
    position: relative;
    height: 527px;
    background: url(../image/login_logo.png) no-repeat center center;
}
.login_form {
    width: 100%;
    padding-left: 68px;
    padding-right: 68px;
}
.login_layout {
    position: relative;
    width: 100%;
    height: 64px;
    margin-bottom: 13px;
}
.btn_input_clear {
    position: absolute;
    top: 15px;
    right: 15px;
    display: block;
    width: 33px;
    height: 33px;
    background: #688adf url(../image/btn_input_clear.png) no-repeat center center;
}
.login_label_layout {
    float: left;
    display: inline-block;
    width: 64px;
    height: 64px;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
}
.login_label_filmCode {
    background: #4975d4 url(../image/bg_film_code.png) no-repeat center center;
}
.login_label_name {
    background: #4975d4 url(../image/bg_name.png) no-repeat center center;
}
.login_label_password {
    background: #4975d4 url(../image/bg_password.png) no-repeat center center;
}
.login_input_layout {
    float: right;
    width: 436px;
    height: 64px;
    line-height: 64px;
    padding-left: 22px;
    font-size: 24px;
    background: #4975d4;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

.login_input_text_normal {
    color: #839ddf;
}

.store_password {
    width: 100%;
    padding-top: 20px;
    padding-bottom: 62px;
    font-size: 24px;
    color: #fff;
}
.icon_store {
    position: relative;
    top: 3px;
    display: inline-block;
    width: 24px;
    height: 23px;
    margin-left: 20px;
    margin-right: 20px;
}
.icon_store_normal {
    background: url(../image/icon_store.png) no-repeat center center;
}
.icon_store_sure {
    background: url(../image/icon_store_sure.png) no-repeat center center;
}
.btn_login {
    width: 100%;
    height: 60px;
    margin-bottom: 122px;
    font-size: 28px;
    color: #fff;
    background: #2f4aaa;
    border: 2px solid #fff;
    border-radius: 5px;
}
.color_fff {
    color: #fff;
}
.login_error {
    position: absolute;
    left: 0;
    bottom: 40px;
    padding-left: 15px;
    padding-right: 15px;
    line-height: 68px;
    font-size: 24px;
    color: #fff;
    background: #3d4c76;
    border-radius: 5px;
}
.btn_login_error {
    background: red;
    border: none;
}